                @Html.DisplayFor(modelItem => item.LoanAccNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoanStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoanAmount)
            </td>
            <td>
                @Html.ActionLink("Process", "GetCheckApproval", new { customerid = item.CustomerId, LoanAccNumber = item.LoanAccNumber}) 
