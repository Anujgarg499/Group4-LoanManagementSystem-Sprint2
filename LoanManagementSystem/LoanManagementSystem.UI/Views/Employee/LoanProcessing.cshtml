@model IEnumerable<LoanManagementSystem.UI.Models.PendingCustomers>

@{
    ViewData["Title"] = "LoanProcessing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>LoanProcessing</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerId)
